# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database?schema=networksvc"
DIRECT_URL="postgresql://username:password@host:port/database?schema=networksvc"

# Server Configuration
PORT=4005
NODE_ENV="production"

# Service URLs
AUTH_SERVICE_URL="https://nexus-auth-service.vercel.app"
PROFILE_SERVICE_URL="https://nexus-profile-service.vercel.app"

# JWT Configuration (for verification)
JWT_ISSUER="nexus-auth-service"
JWT_AUDIENCE="nexus-platform"

# File Upload Configuration
UPLOAD_DIR="/tmp/uploads"
MAX_FILE_SIZE=10485760
ALLOWED_MIME_TYPES="image/jpeg,image/png,image/gif,image/webp,video/mp4,application/pdf"

# Media Storage
BASE_URL="https://nexus-network-service.vercel.app"

# Optional: Redis for Caching
REDIS_URL="redis://username:password@host:port"
